#!/bin/bash

#Used directory

gnomedir=/usr/share/gnome-shell
theme=gnome-shell-theme.gresource

#Remove GDM theme and icons

cd $gnomedir
if [ -f $theme.old ]; then
   rm $theme.old $theme
   pacman --noconfirm -S gnome-shell
else
   echo
   echo "Backup GDM theme not present: re-install gnome-shell is needed"
   echo
fi

